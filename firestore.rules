rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User documents and nested collections
    match /users/{userId} {
      // Allow users to read and write their own user document (profile data)
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Nested collections - each user can only access their own data
      match /courses/{courseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /assignments/{assignmentId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /grades/{gradeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /assessments/{assessmentId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global notifications collection (if needed)
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
  }
}